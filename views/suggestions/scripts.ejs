<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
  $('#create').on('submit', function(event) {
    const form = $(this);
    event.preventDefault();
    $.ajax({method: 'post', url: '/suggestions', data: form.serialize()})
        .fail(error => alert(error.responseText));
  });
</script>
