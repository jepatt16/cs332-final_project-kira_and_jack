<script src="https://code.jquery.com/jquery-3.4.1.min.js"></script>
<script>
  $('#create').on('submit', function(event) {
    const form = $(this);
    event.preventDefault();
    $.ajax({method: 'post', url: '/suggestions', data: form.serialize()})
        .done(window.location.href = '/suggestions/thanks')
        .fail(error => alert(error.responseText));
  });
  $('.delete').on('click', function(event){
     event.preventDefault();
     const tr = $(this.closest('tr'));
     const id = tr.children()[2].textContent;
     $.ajax({method: 'delete', url: '/suggestions', data: id})
         .done(() => window.location.replace('/suggestions'))
         .fail(error => alert(error.responseText));
   });
</script>
