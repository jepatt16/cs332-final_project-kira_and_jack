<!DOCTYPE html>
<html>
<%- include('../head'); -%>

<body>
    <%- include('../navbar', {active: ''}); -%>
    <main class="p-3">
        <h3>Sign Up for an Open Mic</h3>
        <form id="create" class="form">
            <select class="form-control mb-1" name="dates">

                <%_ for (const date of dates) { -%>
                <option value=""><%= date -%></option>
                <%_ } -%>

            </select>

            <input type="text" name="name" placeholder="Name"
                class="form-control form-control-lg font-weight-bold mb-1">
            <textarea name="description" placeholder="Description" rows="3" class="form-control mb-1"></textarea>
            <button class="btn btn-info">Submit</button>
        </form>
    </main>

</body>

</html>