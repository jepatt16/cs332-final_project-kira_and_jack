<!DOCTYPE html>
<html>
<%- include('../head'); -%>
<body>
  <%- include('../navbar', {active: 'open_mics'}); -%>
  <div class="container-fluid">
    <div class="row">
      <div class="col-auto p-3 border-right">
        <nav class="nav nav-pills flex-column">
          <%_ for (const event of events) { -%>
          <a href="/open_mics/<%= event -%>"
            class="nav-item nav-link text-dark inactive"><%= new Date(event).toString().slice(4,15) -%></a>
          <%_ } -%>

          <a href="/signups" class="nav-item nav-link text-dark active bg-warning">Sign Up For An Open Mic</a>

        </nav>
      </div>
      <div class="col">
              <main class="p-3">
                  <%_ if (admin) { -%>
                      <%- include('./private'); -%>
                  <%_ } else {-%>
                      <%- include('./public'); -%>
                  <%_ } %>
              </main>
      </div>
    </div>
  </div>
</body>
