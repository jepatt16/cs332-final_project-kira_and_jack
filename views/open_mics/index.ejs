<!DOCTYPE html>
<html>
<%- include('../head'); -%>

<body>
  <%- include('../navbar', {active: 'open_mics'}); -%>
  <div class="container-fluid">
    <div class="row">
      <div class="col-auto p-3 border-right">
        <nav class="nav nav-pills flex-column">
          <%_ for (const event of events) { -%>
          <%_ const status = (event === show[0].date) ? 'active bg-warning text-dark' : 'inactive'; -%>
          <a href="/open_mics/<%= event -%>"
            class="nav-item nav-link text-dark <%= status -%>"><%= new Date(event).toString().slice(4,15) -%></a>
          <%_ } -%>

          <a href="/signups" class="nav-item nav-link text-dark">Sign-Ups</a>
        </nav>
      </div>
      <div class="col">
          <main class="p-3">
              <%_ if (admin) { -%>
                  <%- include('./private'); -%>
              <%_ } else {-%>
                  <%- include('./public'); -%>
              <%_ } %>
          </main>
      </div>
    </div>
  </div>



</body>
<%- include('../foot'); -%>

</html>
