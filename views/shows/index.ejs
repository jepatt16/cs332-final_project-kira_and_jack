<!DOCTYPE html>
<html>
  <%- include('../head'); -%>
  <body>
    <%- include('../navbar', {active: 'shows'}); -%>
    <main class="p-3">
      <table class="table">
        <thead>
          <tr>
            <th class="border-0"><a href="open_mics/names" class="btn <%= (order === 'names') ? 'btn-dark' : 'btn-primary' -%>">Name</a></th>
            <th class="border-0"><a href="open_mics/description" class="btn <%= (order === 'descprtions') ? 'btn-dark' : 'btn-primary' -%>">Description</a></th>
            <th class="border-0"><a href="open_mics/" class="btn <%= (order === 'dates') ? 'btn-dark' : 'btn-primary' -%>">Date</a></th>
          </tr>
        </thead>
        <tbody>
          <%_ for (const show of shows) { -%>
            <tr>
              <td><%= show.name -%></td>
              <td><%= show.act -%></td>
              <td><%= show.date -%></td>
            </tr>
          <%_ } -%>
        </tbody>
      </table>
    </main>
  </body>

</html>
