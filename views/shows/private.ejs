<main class="p-3">
    <h3>Add New Show</h3>
    <form id="create" class="form">
        <input type="text" name="date" placeholder="MM/DD/YY" class="form-control form-control-lg font-weight-bold mb-1">
        <input type="text" name="time" placeholder="HH:mm" class="form-control form-control-lg font-weight-bold mb-1">
        <input type="text" name="performers" placeholder="Performers" class="form-control form-control-lg font-weight-bold mb-1">
        <textarea name="description" placeholder="Description" rows="3" class="form-control mb-1"></textarea>
        <textarea name="link" placeholder="Site Link" rows="3" class="form-control mb-1"></textarea>
        <textarea name="image" placeholder="Image URL" rows="3" class="form-control mb-1"></textarea>
        <button class="btn btn-warning">Submit</button>
    </form>
</main>